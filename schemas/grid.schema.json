{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://grid.spec/v0.1.0/grid.schema.json",
  "title": ".grid Format",
  "description": "ASCII-core Creative Intermediate Representation v0.1.0",
  "type": "object",
  "required": ["grid", "version", "meta", "canvas", "frames"],
  "additionalProperties": true,
  "properties": {
    "grid": {
      "type": "string",
      "const": "grid",
      "description": "Format identifier. Always 'grid'."
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semver version string."
    },
    "meta": {
      "type": "object",
      "required": ["id", "name", "created", "modified"],
      "additionalProperties": true,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$",
          "description": "UUID v4."
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "modified": {
          "type": "string",
          "format": "date-time"
        },
        "author": {
          "type": "string",
          "maxLength": 256
        },
        "tags": {
          "type": "array",
          "items": { "type": "string", "maxLength": 64 },
          "maxItems": 50
        },
        "notes": {
          "type": "string",
          "maxLength": 10000
        }
      }
    },
    "canvas": {
      "type": "object",
      "required": ["width", "height", "charset", "defaultChar", "defaultColor"],
      "additionalProperties": true,
      "properties": {
        "width": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000
        },
        "height": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000
        },
        "charset": {
          "type": "string",
          "minLength": 1,
          "description": "Available characters for this project."
        },
        "defaultChar": {
          "type": "string",
          "minLength": 1,
          "maxLength": 2,
          "description": "Single character (allows for surrogate pairs)."
        },
        "defaultColor": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$"
        },
        "background": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "default": "#000000"
        },
        "fontFamily": {
          "type": "string",
          "default": "monospace"
        }
      }
    },
    "frames": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10000,
      "items": { "$ref": "#/definitions/Frame" }
    },
    "sequences": {
      "type": "array",
      "items": { "$ref": "#/definitions/Sequence" }
    },
    "project": { "$ref": "#/definitions/Project" }
  },
  "definitions": {
    "Frame": {
      "type": "object",
      "required": ["id", "index", "cells"],
      "additionalProperties": true,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "index": {
          "type": "integer",
          "minimum": 0
        },
        "label": {
          "type": "string",
          "maxLength": 256
        },
        "duration": {
          "type": "number",
          "minimum": 0,
          "description": "Frame duration in milliseconds."
        },
        "cells": {
          "type": "array",
          "items": { "$ref": "#/definitions/Cell" }
        },
        "layers": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["visual", "audio", "spatial", "narrative", "ai"]
          }
        }
      }
    },
    "Cell": {
      "type": "object",
      "required": ["x", "y", "char"],
      "additionalProperties": true,
      "properties": {
        "x": {
          "type": "integer",
          "minimum": 0
        },
        "y": {
          "type": "integer",
          "minimum": 0
        },
        "char": {
          "type": "string",
          "minLength": 1,
          "maxLength": 2
        },
        "color": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$"
        },
        "density": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "semantic": {
          "type": "string",
          "enum": ["solid", "void", "fluid", "emissive", "entity", "control", "boundary"]
        },
        "channel": { "$ref": "#/definitions/Channel" }
      }
    },
    "Channel": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "audio": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "note": { "type": "string", "maxLength": 4 },
            "octave": { "type": "integer", "minimum": 0, "maximum": 9 },
            "instrument": { "type": "string" },
            "velocity": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        },
        "spatial": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "height": { "type": "number" },
            "material": { "type": "string" },
            "collision": { "type": "boolean" }
          }
        },
        "narrative": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "entityId": { "type": "string" },
            "state": { "type": "string" },
            "trigger": { "type": "string" }
          }
        },
        "ai": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "prompt": { "type": "string" },
            "style": { "type": "string" },
            "priority": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        }
      }
    },
    "Sequence": {
      "type": "object",
      "required": ["id", "name", "frameIds"],
      "additionalProperties": true,
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "name": { "type": "string", "minLength": 1, "maxLength": 256 },
        "frameIds": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "fps": { "type": "number", "minimum": 0.1, "maximum": 120, "default": 10 },
        "loop": { "type": "boolean", "default": false },
        "consumers": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["visual", "audio", "spatial", "narrative", "ai"]
          }
        }
      }
    },
    "Project": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "bpm": { "type": "number", "minimum": 1, "maximum": 999, "default": 120 },
        "scale": { "type": "string", "default": "chromatic" },
        "key": { "type": "string", "default": "C" },
        "palette": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "pattern": "^#[0-9a-fA-F]{6}$"
          }
        },
        "tier": {
          "type": "integer",
          "enum": [0, 1, 2]
        }
      }
    }
  }
}